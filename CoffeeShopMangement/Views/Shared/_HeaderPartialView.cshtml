<header class="main-header_area position-relative">
    <div class="header-top border-bottom d-none d-md-block" style="padding: 10px;" >
        <div class="container">
            <div class="row align-items-center">
                <div class="col-4">
                    <div class="header-top-right text-matterhorn">
                        <p class="shipping mb-0 intro"> 05 Cửa hàng ở khắp số 3 Cầu Giấy <span></span></p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="header-top-right text-matterhorn">
                        <p class="shipping mb-0 intro">Đặt Hàng: 0905052002 <span></span></p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="header-top-right text-matterhorn">
                        <p class="shipping mb-0 intro">Free ship từ: 50.000 VND <span></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-header header-sticky" data-bg-color="#fff1e7">
        <div class="container">
            <div class="main-header_nav position-relative">
                <div class="row align-items-center">
                    <div class="col-lg-9 d-none d-lg-block">
                        <div class="main-menu">
                            <nav class="main-nav">
                                <ul class="text-header">
                                    <li class="drop-holder">
                                        <a style="color: black" href="/">
                                            Home
                                        </a>
                                    </li>
                                    <li>
                                        <a style="color: black" asp-action="About" asp-controller="Home">Về chúng tôi</a>
                                    </li>
                                    <li>
                                        <a style="color: black" asp-action="Index" asp-controller="Product">Shop</a>
                                    </li>
                                    <li>
                                        <a style="color: black" asp-action="Index" asp-controller="Blog">Hướng Dẫn Mua Hàng</a>
                                    </li>
                                    <li>
                                        <a style="color: black" asp-action="Index" asp-controller="Blog">Blog</a>
                                    </li>

                                    <li>
                                        <a style="color: black" asp-action="Contact" asp-controller="Home">Liên Hệ</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-lg-3 d-lg-block header-middle-wrap ">
                        <div class="sub-menu">
                            <div class="header-right">
                                <ul>
                                    <li class="dropdown d-none d-md-block">
                                        <button class="btn btn-link dropdown-toggle ht-btn p-0" type="button" id="settingButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="pe-7s-users"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingButton">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                                <li><a class="dropdown-item" href="/tai-khoan-cua-toi.html">Tài khoản của tôi</a></li>
                                                <li><a class="dropdown-item" href="dang-xuat.html">Đăng xuất</a></li>
                                        }
                                        else
                                        {
                                                <li><a class="dropdown-item" href="/dang-ky.html">Đăng ký tài khoản</a></li>
                                                <li><a class="dropdown-item" href="/dang-nhap.html">Đăng nhập</a></li>
                                        }
                                        </ul>
                                    </li>
                                    <li class="d-none d-md-block">
                                        <a href="#">
                                            <i class="pe-7s-like"></i>
                                        </a>
                                    </li>
                                    <li class="d-block d-lg-none">
                                        <a href="#" class="search-btn toolbar-btn">
                                            <i class="pe-7s-search"></i>
                                        </a>
                                    </li>
                                    <li id="numberCart" class="minicart-wrap me-3 me-lg-0">
                                    @await Component.InvokeAsync("NumberCart")
                                    </li>
                                    <li class="mobile-menu_wrap d-block d-lg-none">
                                        <a href="#mobileMenu" class="mobile-menu_btn toolbar-btn pl-0">
                                            <i class="pe-7s-menu"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="offcanvas-minicart_wrapper" id="miniCart">
        @await Component.InvokeAsync("HeaderCart")
    </div>
    <div class="global-overlay"></div>
</header>
